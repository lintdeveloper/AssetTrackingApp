<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.geekbounty.realtimeassettracking.WelcomeActivity">

    <ImageView
        android:id="@+id/topImage"
        android:src="@drawable/toplogo"
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Phone Tracker"
        android:textColor="#fa0a12"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOTE\n\nTo Use our Phone Tracker App\ntype your Correct Phone Number\nto make us locate where your phone is\ncall us on:\n\n07050807509"
        android:textColor="#5f2abf"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a Project of \n\nDepartment of Computer Engineering\nFederal University of Technology\nMinna, Niger State"
        android:textColor="#f4511e"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="Next"
        android:textSize="20dp"
        android:textColor="#fa0a12"
        android:onClick="moveToPhoneHandler"/>
</LinearLayout>
